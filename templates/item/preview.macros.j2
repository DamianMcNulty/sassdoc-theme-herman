{% macro code_block(item, type) %}
<pre data-sassdoc-highlight="scss"><code>
{%- if (type == 'variable') -%}
  {{ scss_variable(item) }}
{%- elif (type == 'css') -%}
  {{ scss_css(item) }}
{%- elif (type == 'function') or (type == 'mixin') -%}
  {{ scss_function_or_mixin(item) }}
{%- endif -%}
</code></pre>
{% endmacro %}

{% macro scss_variable(item) -%}
${{ item.context.name }}: {{ item.context.value }}{% if item.context.scope != 'private' %} !{{ item.context.scope }}{% endif %};
{%- endmacro %}

{% macro scss_function_or_mixin(item) -%}
@{{ item.context.type }} {{ item.context.name }}(
{%- for parameter in item.parameter %}
  ${{ parameter.name }}{% if parameter.type|lower == "arglist" %}...{% elif parameter.default %}: {{ parameter.default }}{% endif %}{% if not loop.last %},{% endif %}
{%- endfor %}
) { /* ... */ }
{%- endmacro %}

{%- macro scss_css(item) -%}
{{ item.context.name }} {
  {{ item.context.value }}
}
{%- endmacro -%}

{% macro show_data(item_data, data_type) %}
  {% if data_type == 'colors' %}
    {{ show_colors(item_data) }}
  {% endif %}
{% endmacro %}

{% macro show_colors(item_data) %}
<section data-sassdoc="color-palette">
  {% for name, value in item_data %}
    <div data-sassdoc="color">
      <div data-sassdoc-color="{{ name }}"></div>
      <div data-sassdoc="color-info">
        <strong data-sassdoc="color-name">{{ name }}</strong>
        <span data-sassdoc="color-value">{{ value }}</span>
      </div>
    </div>
  {% endfor %}
</section>
{% endmacro %}
