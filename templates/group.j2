{% extends 'base.j2' %}

{% import 'utility.macros.j2' as utility %}

{% block breadcrumb %}
  <nav  data-sassdoc-region="breadcrumb">
    {% set base_url = [basePath, activeProject, '/index.html']|join if activeProject else [basePath, 'index.html']|join %}
    {% set project_title = package.title or package.name or 'Herman' %}
    {% set base_name = activeProject or project_title %}
    {% set group_name = topGroups[activeGroup] %}
    {{ utility.link_if(base_name, base_url) }} Â»
    <strong>{{ group_name }}</strong>
  </nav>
{% endblock %}

{% block main %}
  {% for item in items %}
    {% set type = item.context.type %}
    {% include 'item/_item.j2' %}
  {% endfor %}
{% endblock %}
